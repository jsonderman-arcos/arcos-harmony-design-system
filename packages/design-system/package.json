{
  "name": "arcos-harmony-design-system",
  "version": "1.2.0",
  "description": "Hardened design tokens, MUI themes, and utility assets for Arcos Harmony applications.",
  "type": "module",
  "private": false,
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./theme/tokens.css": "./dist/theme/tokens.css",
    "./theme/theme.css": "./dist/theme/theme.css",
    "./theme/mui-theme.json": "./dist/theme/mui-theme.json",
    "./tailwind/preset.cjs": "./dist/tailwind/preset.cjs"
  },
  "sideEffects": [
    "./dist/theme/*.css"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "tokens:fetch": "tsx scripts/fetchFigmaTokens.ts",
    "tokens:build": "tsx scripts/build-from-figma.ts",
    "build:design-tokens": "npm run tokens:fetch && npm run tokens:build",
    "theme:build": "tsx scripts/build-mui-themes.ts",
    "build:theme": "npm run theme:build",
    "build": "npm run clean && npm run theme:build && tsup --config tsup.config.ts && tsx scripts/copy-static-assets.ts",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "lint": "eslint \"{src,scripts,stories}/**/*.{ts,tsx}\"",
    "format": "prettier --write \"{src,scripts,stories,.storybook}/**/*.{ts,tsx,md,json}\"",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "changeset": "changeset",
    "release": "changeset publish",
    "prepare": "npm run build"
  },
  "peerDependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.1",
    "@storybook/addon-essentials": "^8.1.0",
    "@storybook/addon-interactions": "^8.1.0",
    "@storybook/addon-links": "^8.1.0",
    "@storybook/blocks": "^8.1.0",
    "@storybook/react": "^8.1.0",
    "@storybook/react-vite": "^8.1.0",
    "@storybook/test": "^8.1.0",
    "@types/node": "^20.12.12",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "axios": "^1.11.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "storybook": "^8.1.0",
    "tsup": "^8.0.2",
    "tsx": "^4.9.3",
    "typescript": "^5.5.4"
  }
}

{
  "name": "arcos-harmony-design-system",
  "version": "1.0.0",
  "private": false,
  "description": "Design tokens and theme assets for our UX design system.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./theme/*": "./dist/theme/*"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run build:assets",
    "build:assets": "mkdir -p dist/theme && cp -R src/theme/*.json dist/theme/ 2>/dev/null || true && cp -R src/theme/*.css dist/theme/ 2>/dev/null || true && cp -f src/index.d.ts dist/index.d.ts 2>/dev/null || true",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "tokens:fetch": "ts-node src/tokens/scripts/fetchFigmaTokens.ts",
    "tokens:build": "ts-node src/tokens/scripts/build-from-figma.ts",
    "tokens:fetch-build": "ts-node src/tokens/scripts/fetchFigmaTokens.ts && yarn tokens:build",
    "tokens:watch": "chokidar 'src/tokens/raw/tokens-raw-response.json' -c 'yarn tokens:build'",
    "tokens:mui": "ts-node -r tsconfig-paths/register src/tokens/scripts/build-mui-themes.ts",
    "tokens:override": "ts-node src/tokens/scripts/generateMuiOverrides.ts"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "chokidar-cli": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.1",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1"
  }
}

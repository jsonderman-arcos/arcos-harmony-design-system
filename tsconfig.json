{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
     "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@theme/*": ["theme/*"],
      "@outputs/*": ["tokens/outputs/*"],
      "@themeOut/*":["theme/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
